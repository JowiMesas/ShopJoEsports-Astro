---
import "../styles/global.css";
const categories = [
	{
		id: 'football',
		name: 'Futbol',
		icon: '⚽'
	},
	{
		id: 'formula1',
		name: 'Formula 1',
		icon: '🏎️'
	},
	{
		id: 'tennis',
		name: 'Tenis',
		icon: '🎾'
	}
]
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>JoSports</title>
	</head>
	<body class="bg-gray-50 text-secondary w-screen h-screen">
		<header class="bg-primary-light text-black fixed w-screen px-10">
			<nav class="container mx-auto flex justify-between items-center py-4">
				<a href="/" class="text-2xl font-bold">JoEsports</a>
				
				<div class="relative group">
				  <button class="flex items-center space-x-2 hover:bg-primary transition">
					Categorias
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
					  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
					</svg>
				  </button>
				  
				  <div class="absolute hidden group-hover:block bg-white shadow-lg rounded-md mt-2 overflow-hidden z-20">
					{categories.map(category => (
					  <a 
						href={`/categories/${category.id}`} 
						class="flex items-center px-4 py-2 hover:bg-primary-special hover:text-primary transition"
					  >
						<span class="mr-2">{category.icon}</span>
						{category.name}
					  </a>
					))}
				  </div>
				</div>
				
				<div class="flex items-center space-x-4">
				  <a href="/cart" class="hover:text-primary-special">
					🛒 Carrito
				  </a>
				</div>
			  </nav>
			</header>
		</header>
		<main>
			<slot />
		</main>
		<footer class="bg-secondary text-white py-8 mt-8 bottom-0">
			<div class="container mx-auto text-center">
			  © {new Date().getFullYear()} JoEsports
			</div>
		  </footer>
	</body>
</html>


